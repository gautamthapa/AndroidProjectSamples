<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="15dp"
  tools:context="com.strontech.imgautam.patanjalistorenew.fragments.SelectRegFragment">

  <android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center_vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:gravity="center"
      android:layout_marginBottom="30dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.v7.widget.AppCompatImageView
        android:scaleType="centerCrop"
        android:src="@drawable/patanjali_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:contentDescription="TODO"/>

    </LinearLayout>
    <android.support.v7.widget.CardView
      android:id="@+id/cardView1"
      android:layout_marginBottom="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="#ff8000">

      <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_weight="1"
          android:src="@drawable/buy_white"
          android:contentDescription="TODO"/>

        <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_Uregister"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1.5 "
          android:background="#ff8000"
          android:text="User\nRegister"
          android:textAllCaps="false"
          android:textColor="#ffffff"
          android:textSize="25sp" />
      </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
      android:id="@+id/cardView2"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="35dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="#008000"
      >

      <LinearLayout
        android:id="@+id/merch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_weight="1"
          android:src="@drawable/buy_whitet"
          android:contentDescription="TODO"/>

        <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_Mregister"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          android:background="#008000"
          android:text="Merchant\nRegister"
          android:textAllCaps="false"
          android:textColor="#ffffff"
          android:textSize="25sp" />

      </LinearLayout>
    </android.support.v7.widget.CardView>
  </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>
