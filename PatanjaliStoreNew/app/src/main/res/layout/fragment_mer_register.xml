<android.support.v4.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nestedScrollView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background"
  android:orientation="vertical"
  tools:context="com.strontech.imgautam.patanjalistorenew.merfragments.MerRegisterFragment">
  <android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
      android:id="@+id/textInputLayoutShopId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_shopid_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shop id"
        android:inputType="number"
        android:textSize="18sp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
      android:id="@+id/textInputLayoutName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_username_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text"
        android:textSize="18sp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
      android:id="@+id/textInputLayoutMobNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_mob_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mob. number"
        android:inputType="phone"
        android:textSize="18sp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
      android:id="@+id/textInputLayoutEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp">

      <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_email_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="18sp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
      android:id="@+id/textInputLayoutShopAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_address_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shop address"
        android:inputType="textMultiLine"
        android:textSize="18sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp">
      <Button
        android:id="@+id/btn_reg_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff8000"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
    </android.support.v7.widget.CardView>
    <TextView
      android:id="@+id/textViewLoginLink"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:gravity="center"
      android:text="Already a member? Login"
      android:textSize="16dp"/>
  </android.support.v7.widget.LinearLayoutCompat>


</android.support.v4.widget.NestedScrollView>
