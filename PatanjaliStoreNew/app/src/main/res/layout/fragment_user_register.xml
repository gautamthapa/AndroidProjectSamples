<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="15dp"
  android:id="@+id/linearLayout"
  android:background="@drawable/background"
  android:orientation="vertical"
  tools:context="com.strontech.imgautam.patanjalistorenew.userfragments.UserRegisterFragment">

  <android.support.design.widget.TextInputLayout
    android:id="@+id/textInputLayoutUserName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/textInputEditTextUserName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Username"
      android:inputType="text"
      android:textSize="18sp"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
    android:id="@+id/textInputLayoutUserEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/textInputEditTextUserEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:textSize="18sp"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
    android:id="@+id/textInputLayoutUserPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/textInputEditTextUserPassword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Password"
      android:inputType="textPassword"
      android:textSize="18sp"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
    android:id="@+id/textInputLayoutUserConfirmPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/textInputEditTextUserConfirmPassword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Confirm Password"
      android:inputType="textPassword"
      android:textSize="18sp"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
    android:id="@+id/textInputLayoutUserMobNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/textInputEditTextUserMobNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Mob. number"
      android:inputType="numberDecimal"
      android:textSize="18sp"/>
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/textInputLayoutUserAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/textInputEditTextUserAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter delivery address"
      android:inputType="textMultiLine"
      android:textSize="18sp"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp">
    <Button
      android:id="@+id/buttonRegisterUser"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#ff8000"
      android:text="Submit"
      android:textColor="@android:color/white"
      android:textSize="20sp"/>
  </android.support.v7.widget.CardView>

  <TextView
    android:textColor="@android:color/black"
    android:id="@+id/textViewLoginLink"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:text="Already a member? Login"
    android:textSize="16dp" />


</LinearLayout>
